<h1 Welcome to the Asana </h1>
<table>
  <tr>
  <th>Title &nbsp; &nbsp; &nbsp;</th>
  <th>Description</th>
  <th>Dept</th>
  <th>Show img <th>
  <th>Edit</th>
  <th>Delete</th>
  </tr>

  <% @projects.each do |project| %>  
    <tr>
    <td><%= project.title %></td>
    <td><%= project.description %></td>
    <td><%= project.department %></td>
    <td><%= link_to 'Show', project_path(project) %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project_path(project),
            method: :delete,
            data: { confirm: 'Are you sure to delete Task?' } %></td>
  </tr>
<% end %>

</table>
